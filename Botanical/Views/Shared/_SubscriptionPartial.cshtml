@model Business.DTOs.Subscriber.GetSubscriberDTO

<section class="subscribeSecBlock bgCover col-12 pt-xl-24 pb-xl-12 pt-lg-20 pt-md-16 pt-10 pb-md-8 pb-5" style="background-color:#f5f5f5">
    <header class="col-12 mainHeader mb-sm-9 mb-6 text-center">
        <h1 class="headingIV playfair fwEblod mb-4">Subscribe Our Newsletter</h1>
        <span class="headerBorder d-block mb-md-5 mb-3">
            <img src="~/client/assets/images/hbdr.png" alt="Header Border" class="img-fluid img-bdr">
        </span>
        <p class="mb-sm-6 mb-3">Enter your email address to join our mailing list and keep yourself updated</p>
    </header>

    <!-- ✅ Corrected form action to target SubscriptionController -->
    @using (Html.BeginForm("Subscribe", "Subscription", FormMethod.Post, new { @class = "emailForm1 mx-auto overflow-hidden d-flex flex-wrap" }))
    {
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control px-4 border-0", placeholder = "Enter your email..." })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        <button type="submit" class="btn btnTheme btnShop fwEbold text-white py-3 px-4">Subscribe <i class="fas fa-arrow-right ml-2"></i></button>
    }

    <!-- ✅ Optional message display -->
    @if (TempData["SubscriptionSuccess"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["SubscriptionSuccess"]</div>
    }
    @if (TempData["SubscriptionError"] != null)
    {
        <div class="alert alert-danger mt-3">@TempData["SubscriptionError"]</div>
    }
</section>
