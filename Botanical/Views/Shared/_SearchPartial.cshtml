@using Business.DTOs.Products
@model List<GetProductDTO>

@foreach (var product in Model)
{
    <ul style="background-color: white; list-style:none; margin-bottom:0; padding-left:0">
        <li style="height: 60px;padding-top: 8px;">
            <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id" style="width:100%; cursor: pointer; color: #000">
                <img style="width:60px;height: 50px !important;" src="@product.ImagePath" />
                <p style="display:inline-block; margin-bottom:0">@product.Name</p>
            </a>
        </li>
    </ul>
}